rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated()
        && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Public content - readable by everyone
    match /e-news_berita/{document} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /e-news_pengumuman/{document} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Profil Desa content - public read, admin write
    match /profil-desa/{document} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Wilayah content - public read, admin write
    match /wilayah/{document} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Sejarah content - public read, admin write
    match /sejarah/{document} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Visi & Misi content - public read, admin write
    match /visi-misi/{document} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Admin profiles - secure access
    match /admins/{uid} {
      allow read: if isAuthenticated() && request.auth.uid == uid;
      allow write: if isAuthenticated() && request.auth.uid == uid;
    }

    // Users collection - for RBAC system
    match /users/{document} {
      // Allow read untuk authenticated users
      allow read: if isAuthenticated();
      
      // Allow write hanya untuk admin
      allow create, update, delete: if isAdmin();
    }
    
    // User profiles collection
    match /user-profiles/{userId} {
      allow read, write: if isAuthenticated() 
        && (isAdmin() || request.auth.uid == userId);
    }
    
    // User sessions - untuk tracking login
    match /user-sessions/{sessionId} {
      allow read, write: if isAuthenticated();
    }
    
    // Admin logs - hanya admin yang bisa akses
    match /admin-logs/{logId} {
      allow read, write: if isAdmin();
    }
    
    // Role requests - untuk request perubahan role  
    match /role-requests/{requestId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Default allow read/write for authenticated users (sementara)
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
